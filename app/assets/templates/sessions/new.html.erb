<style>
	body{
		background-image: url(<%= asset_path 'background.jpg' %>);
		background-size: 100vw 100vh;
		background-repeat: no-repeat;
		overflow: hidden; 
   	 	height: 100%;
	}
	.form-control{
		background: white !important;
		opacity: 1;
	}
	.form_wrapper{
		height: 100vh;
	}
	.awesome{
		width: 95%;
    	margin: 0 auto; 
	}
	.awesome2{
		width: 33%;
		margin: 0 auto;
		min-width: 320px;
	}
	.awesome3{
		z-index: -1;
		margin-top: 25%;
		vertical-align: middle;
		padding: 20px;
		background-color: rgba(222, 221, 220, 0.9);
		height: 300px;
		border-radius: 5px;
			-webkit-box-shadow: -2px 3px 8px 7px rgba(0,0,0,0.19);
			-moz-box-shadow: -2px 3px 8px 7px rgba(0,0,0,0.19);
			box-shadow: -2px 3px 8px 7px rgba(0,0,0,0.19);
	}
	.buttons{
		margin-top: 20px;
	}
	.message{
		height: 51px;
	}
	.button{
		width: 60%;
	}
	.alert{
		background-color: #c65353;
		color: white;
		border: none;
	}
	.title_form{
		color: black;
		font-size: 30px;
	}
	.join_now{
		color: #66666d;
		font-size: 12px;
	}
	.blue{
		color: #236197;
		font-family: "Comic Sans MS", cursive, sans-serif;
	}


	/*

	*/
	#bottomnav{
	    width:100vw;
	    height:auto;
	    background:#202020;
	    position:absolute;
	    bottom:0px;
	}

	#bottomnav ul{
	    list-style:none;
	    display:inline-block;
	    width:100%;
	    padding-left: 20%;
	}

	#bottomnav ul li{
	    width:15%;
	    display: inline-block;
	    margin-top: 10px;
	    vertical-align: middle;
	    color: white;
	}
	#bottomnav ul li a{
		color: white;
	}

</style>
<div class = 'container'>
	<div class = 'row message text-center'>
		<div ng-show="message" class = "alert alert-danger">
			<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
			<p>{{message}}</p>
		</div>
	</div>
	<div class="row text-center awesome2 form_wrapper">
		<div class = 'awesome3'>
			<form class="col-md-12">
				<h3 class = 'title_form'>Linked<span class = 'blue'>Out</span></h3>
				<div class="row buttons">
					<div class="input-group awesome">
						<input placeholder = 'Email address' id="email" type="email" class="form-control" ng-model="newSession.email">
					</div>
				</div>
				<div class="row buttons">
					<div class="input-group awesome">
						<input id="password" placeholder = 'Password' type="password" class="form-control" ng-model="newSession.password">
					</div>
				</div>
				<div class = "row buttons">
					<div class="input-group awesome">
						<button class="btn-lg btn-primary button" ng-click = "createSession()" name="action">Sign In</button>
						<!-- <button class="btn btn-danger">facebook</button> -->
					</div>
				</div>
				<div class = 'row buttons'>
					<p class = 'join_now'>Not a member? <a href = '/register'>Join Now</a></p>
				</div>	
			</form>
		</div>
	</div>
</div>
<div id="bottomnav">
    <ul>
        <li><a href='#'>User Agreement</a></li>
        <li><a href='#'>Privacy Policy</a></li>
        <li><a href='#'>Cookie Policy</a></li>
        <li><a href='#'>Copyright Policy</a></li>
        <li><a href='#'>About Us</a></li>
    </ul>
</div>
<h1>awesome</h1>
